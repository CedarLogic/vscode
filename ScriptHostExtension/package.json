{
    "name": "windowsiot",
    "displayName": "Windows Iot Core Extension for VS Code",
    "description": "Description of Windows IoT Core extension",
    "version": "0.0.4",
    "publisher": "Microsoft",
    "engines": {
        "vscode": "^0.10.10"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.getDeviceInfo",
        "onCommand:extension.getDeviceName",
        "onCommand:extension.getPackages",
        "onCommand:extension.installPackage",
        "onCommand:extension.listIotCommands",
        "onCommand:extension.setDeviceName",
        "onCommand:extension.runCommand",
        "onCommand:extension.startApp",
        "onCommand:extension.stopApp",
        "onCommand:extension.uploadFile"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "iot configuration",
            "properties": {
                "iot.Device.IpAddress" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "IP Address of the target Windows IoT Core device"
                },
                "iot.Device.DeviceName" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Name of the target Windows IoT Core device"
                },
                "iot.Device.UserName" : {
                    "type": ["string", "null"],
                    "default": "Administrator",
                    "description": "User name on the target Windows IoT Core device"
                },
                "iot.Device.Password" : {
                    "type": ["string", "null"],
                    "default": "p@ssw0rd",
                    "description": "Password on the target Windows IoT Core device"
                },
                "iot.File" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "file to upload"
                },
                "iot.AppxInfo.Appx" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Local appx file path"
                },
                "iot.AppxInfo.Certificate" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Local certificate file path"
                },
                "iot.AppxInfo.Dependencies" : {
                    "type": "array",
                    "default": null,
                    "description": "Array of local paths to dependencies"
                },
                "iot.AppxInfo.PackageFullName" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Package Full Name"
                },
                "iot.AppxInfo.PackageRelativeId" : {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Package relative id"
                },
                "iot.RunCommands" : {
                    "type": "array",
                    "title": "List of commands"
                }
            }
        },
        "commands": 
        [{
            "command": "extension.getDeviceInfo",
            "title": "Get Device Info"
        },
        {
            "command": "extension.getDeviceName",
            "title": "Get Device Name"
        },
        {
            "command": "extension.getPackages",
            "title": "Get Installed Packages"
        },
        {
             "command": "extension.installPackage",
             "title": "Install Package to Device"
        },
        {
            "command": "extension.listIotCommands",
            "title": "List IoT Extension Commands"
        },
        {
            "command": "extension.runCommand",
            "title": "Run Command on Device"
        },
        {
            "command": "extension.setDeviceName",
            "title": "Set Device Name"
        },
        {
             "command": "extension.startApp",
             "title": "Start Application on Device"
        },
        {
             "command": "extension.stopApp",
             "title": "Stop Application on Device"
        },
        {
             "command": "extension.uploadFile",
             "title": "Upload File to Device"
        }]
        // TODO: this didn't work as intended even though it showed as bound in the ui
        // "keybindings": [{
        //     "command": "extension.installPackage",
        //     "key": "ctrl+1",
        //     "mac": "cmd+1",
        //     "when": "editorTextFocus"
        // }]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "request": "^2.72.0"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}